'use strict';

var app = angular.module('natural-bot', ['ui.router', 'ui.bootstrap']);

app.constant('URL', "<%= ENV['URL'] %>" + '/api/v1');

app.config(['$stateProvider', '$urlRouterProvider', function($stateProvider, $urlRouterProvider) {
  $urlRouterProvider.otherwise("/");

  $stateProvider
    .state('home', {
      url: "/",
      templateUrl: "<%= asset_path('static_pages/index.html') %>",
      controller: 'StaticPagesCtrl'
    })
    .state('dashboard', {
      url: "/dashboard",
      templateUrl: "<%= asset_path('static_pages/dashboard.html') %>",
      controller: 'DashboardCtrl'
    });
}]);
